source "https://rubygems.org"

git_source(:github) do |repo_name|
  repo_name = "#{repo_name}/#{repo_name}" unless repo_name.include?("/")
  "https://github.com/#{repo_name}.git"
end

ruby "<%= Boxcar::RUBY_VERSION %>"

gem "rails", "<%= Boxcar::RAILS_VERSION %>"

<% if config[:activeadmin] -%>
# TODO: When AA gets bumped to v1.2.2, change this back to
# gem activeadmin, "~> 1.2.0"
gem "activeadmin"
<% end -%>
gem "coffee-rails", "~> 4.2"
<% if config[:devise] -%>
gem "devise"
<% end -%>
<% if config[:devise_token_auth] -%>
gem "devise_token_auth"
<% end -%>
gem "sass-rails", "~> 5.0"
# TODO: bump this to ~> 1.0.0, once this gets resolved: https://github.com/rails/rails/pull/31671
gem "pg", "~> 0.21.0"
gem "puma", "~> 3.7"
<% if config[:tape] -%>
gem "taperole", "~> 2.0"
<% end -%>
gem "uglifier", ">= 1.3.0"

group :development, :test do
  gem "awesome_print"
  gem "brakeman", "~> 3.5"
  gem "bundler-audit"
  gem "codeclimate-test-reporter", "~> 1.0.0"
  gem "database_cleaner"
  gem "factory_bot_rails"
  gem "pry-byebug"
  gem "rspec-rails"
  gem "rubocop"
  gem "shoulda-matchers"
  gem "simplecov"
end

group :development do
  gem "listen", ">= 3.0.5", "< 3.2"
  gem "web-console", ">= 3.3.0"
end
