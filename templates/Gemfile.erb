source "https://rubygems.org"

git_source(:github) do |repo_name|
  repo_name = "#{repo_name}/#{repo_name}" unless repo_name.include?("/")
  "https://github.com/#{repo_name}.git"
end

ruby "<%= Boxcar::RUBY_VERSION %>"

gem "rails", "<%= Boxcar::RAILS_VERSION %>"

<%= 'gem "activeadmin"' if config[:activeadmin] %>
<%= 'gem "active_model_serializers"' if config[:active_model_serializers] %>
gem "bootsnap", ">= 1.1.0", require: false
<%= 'gem "devise"' if config[:devise] %>
<%= 'gem "devise_token_auth"' if config[:devise_token_auth] %>
<%- if config[:flipper] -%>
gem "flipper"
gem "flipper-active_record"
gem "flipper-ui"
<%- end -%>
gem "mailgun-ruby"
gem "pg", "~> 1.0.0"
gem "puma", "~> 3.7"
<%= 'gem "taperole", "~> 2.0"' if config[:tape] %>
gem "webpacker", "~> 3.5"

group :development, :test do
  gem "annotate"
  gem "awesome_print"
  gem "brakeman"
  gem "bundler-audit"
  gem "capybara"
  gem "database_cleaner"
  gem "dotenv-rails"
  gem "factory_bot_rails"
  gem "foreman"
  gem "faker"
  gem "pry-byebug"
  gem "rails-erd"
  gem "rspec-rails"
  gem "rubocop"
  gem "rubocop-rspec"
  gem "selenium-webdriver"
  gem "shoulda-matchers"
  gem "simplecov"
end

group :development do
  gem "bullet"
  gem "letter_opener"
  gem "listen", ">= 3.0.5", "< 3.2"
  gem "web-console", ">= 3.3.0"
end

group :test do
  gem 'capybara-selenium'
end